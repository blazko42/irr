@model IRR.Models.User

@section loginStyle
{
    <link href="@Url.Content("~/Content/login.css")" rel="stylesheet" type="text/css" />
}

@{
    ViewBag.Title = "CreateAccount";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
			<div class="wrap">
				<p class="form-title" style="color: black">
					Sign Up to IRR
				</p>
				<form class="login" method="post" action="@Url.Action("CreateAccount", "Home")">
					<input type="text" name="UserName" value="@(Model.UserName)" placeholder="Username" />
					<input type="password" name="Password" value="@(Model.Password)" placeholder="Password" />
					<input type="submit" value="Create Account" class="btn btn-warning btn-sm" />
				</form>
			</div>
        </div>
    </div>
</div>



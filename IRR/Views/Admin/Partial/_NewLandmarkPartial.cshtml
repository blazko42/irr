@model IRR.Models.Landmark

<form method="post" action="@Url.Action("NewLandmark", "Admin")" id="newMovieForm"  enctype="multipart/form-data">

    <input type="hidden" id="LDId" name="LDId" value="@Model.LDId" />

    <div class="form-horizontal">
        <div class="form-group">
			<label class="control-label col-md-2">Landmark Id</label>
            <div class="col-md-10 form-inline">
                <input type="text" id="LandmarkId" name="LandmarkId" value="@Model.LandmarkId" class="form-control" required="required" readonly />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Landmark URL</label>
            <div class="col-md-10">
                <input type="text" id="LandmarkURL" name="LandmarkURL" value="@Model.LandmarkURL" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group">
			<label class="control-label col-md-2">Location</label>
            <div class="col-md-10">
                <input type="text" id="Location" name="Location" value="@Model.Location" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group">
			<label class="control-label col-md-2">Information</label>
            <div class="col-md-10">
                <input type="text" id="Information" name="Information" value="@Model.Information" class="form-control" required="required" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>

